<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.android.queiros.igor.petscare.CadastroAnimaisActivity"
    android:layout_margin="20dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ShowImageView"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/search"
        app:civ_border_color="@android:color/background_light" />

    <Spinner
        android:id="@+id/spinnerSpecies"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerGenres"
        android:layout_marginTop="10dp"
        android:entries="@array/species"
        android:hint="Espécie" />

    <Spinner
        android:id="@+id/spinnerGenres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerCoat"
        android:layout_marginTop="10dp"
        android:entries="@array/genres"
        android:hint="Espécie" />

    <Spinner
        android:id="@+id/spinnerCoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtColor"
        android:layout_marginTop="10dp"
        android:entries="@array/coat"
        android:hint="Espécie" />

    <EditText
        android:id="@+id/edtColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editConsultaStatus"
        android:ems="10"
        android:hint="Digite a cor do animal"
        android:inputType="text"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="210dp" />

    <EditText
        android:id="@+id/editConsultaStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editConsultaName"
        android:ems="10"
        android:hint="Digite a raça do animal"
        android:inputType="text"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="210dp" />

    <EditText
        android:id="@+id/editConsultaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ShowImageView"
        android:ems="10"
        android:hint="Digite o nome do animal"
        android:inputType="text"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="210dp" />

    <Button
        android:id="@+id/ButtonUploadImage"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/btn_login"
        android:text="Confirmar"
        android:textColor="@android:color/white"
        android:layout_below="@+id/spinnerSpecies"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>

